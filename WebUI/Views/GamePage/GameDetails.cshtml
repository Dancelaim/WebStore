@model WowCarry.Domain.Entities.ProductGame
<div id="product-games" class="container">
    <h1>@Model.GameName</h1>

    <h2>Popular Products Today</h2>
    @Html.Action("RecommendedProducts", "HomePage", new { game = Model.GameName })
    @if (@Model.GameDescription != null)
    {
        <div class="description">
            @Model.GameDescription
        </div>
    }
</div>