@using WebUI.Models
@model GameCategoryViewModel
<div class="select-games-block">
    <h2>Professional Gaming Boosting Services</h2>
    <div class="games-list">
        @foreach (var game in Model.Games)
        {
        <div class="game-item">
            <div class="title"> @game.GameName </div>
            @foreach (var b in Model.ProductCategories.Where(k => k.Key == game.GameName))
            {
                @Html.RouteLink(b.Value, "Sorted",
               new { selectedGame = game.GameShortUrl, categoryName = b.Value })
            }
        </div>
            }
    </div>
</div>