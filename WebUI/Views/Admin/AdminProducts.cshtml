@model IEnumerable<WowCarry.Domain.Entities.Product>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminProducts</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Название</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.ProductName, "Edit", new { item.ProductId })</td>
                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("GameId", item.ProductId)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Удалить" />
                    }
                </td>
            </tr>
        }
    </table>
    <div class="panel-footer">
        @Html.ActionLink("Добавить игру", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</body>
</html>
