@model IEnumerable<WowCarry.Domain.Entities.Product>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Products</title>
</head>
<body>
    <div class="panel-heading">
        <h1>Admin Products</h1>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div class="save-btns">
            @Html.ActionLink("Create New", "Create", new { type = "Product" }, new { @class = "btn" })
        </div>
    </div>
    

    <table class="table products-list-table">
        <thead>
            <tr class="title">
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @Html.ActionLink(item.ProductName, "Edit", new { Id = item.ProductId, type = item.GetType().BaseType.Name })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("GameId", item.ProductId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                        <input type="submit" value="Product Options" class="btn" id="toProdOptions" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
