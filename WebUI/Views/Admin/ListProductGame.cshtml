@model IEnumerable<WowCarry.Domain.Entities.ProductGame>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminProductGames</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateEdit", new { type = "ProductGame" }, new { @class = "btn" })
    </p>
    <table class="table">
        <thead>
            <tr class="title">
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @Html.ActionLink(item.GameName, "CreateEdit", new { Id = item.ProductGameId, type = item.GetType().BaseType.Name })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("GameId", item.ProductGameId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
