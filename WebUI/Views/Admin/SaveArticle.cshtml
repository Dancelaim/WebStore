@model WowCarry.Domain.Entities.ArticleDetails
@using (Html.BeginForm("SaveArticles", "Admin", FormMethod.Post))
{
    <div class="panel-heading">
        <div class="save-btns">

            <input type="submit" value="Save" class="btn" id="SubmitOption" />
            @Html.ActionLink("Exit", "Admin", null, new
       {
           @class = "btn btn-default exitBtn"
       })
        </div>
    </div>
    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        @Html.HiddenFor(x => Model.ArticleId)
        string[] toIgnore = { "ArticleId", "ArticleCreateTime", "ArticleUpdateTime", "ArticlePostTime" };

         if (!toIgnore.Contains(property.PropertyName))
         {
            <div class="input-block">
                <label>@(property.DisplayName ?? property.PropertyName):</label>
                @Html.Editor(property.PropertyName, new { @class = "form-control" })
                @if (property.PropertyName.Contains("SelectedGame"))
                {
                    @Html.DropDownListFor(m => m.ProductGame, Model.GamesList)
                }
            </div>
        }

    }
 }
