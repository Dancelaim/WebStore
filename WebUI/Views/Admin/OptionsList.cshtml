@model WowCarry.Domain.Entities.ProductOptionDetails

    <div id="@Model.OptionName.ToString().Replace(' ','_')" class="opt-head">
        @Model.OptionName<span class="remove-option">@Html.HiddenFor(x => x.OptionId)</span>
    </div>
    <div class="opt-body @Model.OptionName.ToString().Replace(' ','_')">
        @foreach (var property in ViewData.ModelMetadata.Properties)
        {

            if (property.PropertyName == "ParamCollection")
            {
                <div class="param-list">

                    <div class="param-titles">
                        <div>Name</div>
                        <div>Tooltip</div>
                        <div>Price</div>
                        <div>Sale</div>
                        <div class="parent-title">Parent</div>
                    </div>

                    @foreach (var item in Model.ParamCollection)
                    {
                        @Html.Partial("Param", item)
                    }
                </div>
            }
            else
            {
                if (property.PropertyName == "OptionParent")
                {
                    <label>@(property.DisplayName ?? property.PropertyName):</label>
                    @Html.DropDownList("Option Parameter Parent", Model.ParentParamList, Model.ParentParamList.SelectedValue != null ? Model.ParentParamList.SelectedValue.ToString() : "Empty");
                }
                else if (property.PropertyName != "ParentParamList" && property.PropertyName != "OptionId" && property.PropertyName != "ParamList")
                {
                    <label>@(property.DisplayName ?? property.PropertyName):</label>
                    @Html.Editor(property.PropertyName, new { @class = "form-control" })
                }
            }
        }
        <div class="add-param-block">
            <label>Add Parameter</label>
            @Html.HiddenFor(x => x.OptionName)
            @Html.DropDownList("Parameter Parent", Model.ParamList, Model.ParamList.SelectedValue != null ? Model.ParamList.SelectedValue.ToString() : "Empty")
            <div class="param-add"><span>Add</span></div>
        </div>
    </div>

