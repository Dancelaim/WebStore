@model IEnumerable<WowCarry.Domain.Entities.TemplateOptions>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminOptions</title>
</head>
<body>
    <div class="panel-heading">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div class="save-btns">
            @Html.ActionLink("Create New", "CreateEdit", new { type = "TemplateOptions" }, new { @class = "btn" })
        </div>
    </div>


    <table class="table">
        <thead>
            <tr class="title">
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @Html.ActionLink(item.OptionName, "CreateEdit", new { Id = item.OptionId, type = item.GetType().BaseType.Name })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("GameId", item.OptionId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
