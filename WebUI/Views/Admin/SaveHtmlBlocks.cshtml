@model WowCarry.Domain.Entities.HtmlBlockDetails
@using (Html.BeginForm("SaveHtmlBlock", "Admin", FormMethod.Post))
{
    <div class="panel-heading">
        <div class="save-btns">

            <input type="submit" value="Save" class="btn" id="SubmitOption" />
            @Html.ActionLink("Exit", "Admin", null, new
       {
           @class = "btn btn-default exitBtn"
       })
        </div>
    </div>
    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        @Html.HiddenFor(x => Model.SiteBlockId)
        if (property.PropertyName != "SiteBlockId" && property.PropertyName != "HtmlBlockChildDetailsCollection")
        {
            <label>@(property.DisplayName ?? property.PropertyName):</label>
            @Html.Editor(property.PropertyName, new { @class = "form-control" })
        }
    }
    <div class="childblock-list">
        <div class="childblock-titles">
            <div>Text</div>
            <div>Title</div>
            <div>Image</div>
            <div>CSS Class</div>
            <div>ChildOrder</div>
        </div>
        @if (Model.HtmlBlockChildDetailsCollection != null)
        {
            for (var i = 0; i < Model.HtmlBlockChildDetailsCollection.Count(); i++)
            {
                <div class="param-fields">
                    @Html.HiddenFor(x => Model.HtmlBlockChildDetailsCollection[i].SiteBlockChildsId)
                    <div>
                        @Html.TextBoxFor(x => Model.HtmlBlockChildDetailsCollection[i].Text)
                    </div>
                    <div>
                        @Html.TextBoxFor(x => Model.HtmlBlockChildDetailsCollection[i].Title)
                    </div>
                    <div>
                        @Html.TextBoxFor(x => Model.HtmlBlockChildDetailsCollection[i].Image)
                    </div>
                    <div>
                        @Html.TextBoxFor(x => Model.HtmlBlockChildDetailsCollection[i].CSSClass)
                    </div>
                    <div>
                        @Html.TextBoxFor(x => Model.HtmlBlockChildDetailsCollection[i].ChildOrder)
                    </div>
                    <div><span class="remove-param"></span></div>
                </div>

            }
        }
    </div>
}
