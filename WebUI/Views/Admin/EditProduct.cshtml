        $("#Option_Name").change(function () {
            $.ajax({
                cache: false,
                type: 'POST',
                url: '@Url.Action("OptionsList")',
                data: {
                    optionName: $("#Option_Name").val(),
                    prodId: $("#ProductId").val()
                        },
                success: function (data) {
                    $("#OptionBlock").html(data);
                },
                error: function (ex) {
                    alert('Failed to retrieve options.' + ex);
                }
            });
            return false;
        })
    });*@

    $(document).ready(function () {
        $('select').selectpicker({
            liveSearch: true
        });
    });

    ! function (i) {
        var o, n;
        i(".options-head").on("click", function () {
            o = i(this).parents(".options-block"), n = o.find(".options-body"),
                o.hasClass("active_block") ? (o.removeClass("active_block"),
                    n.slideUp()) : (o.addClass("active_block"), n.stop(!0, !0).slideDown(),
                        o.siblings(".active_block").removeClass("active_block").children(
                            ".options-body").stop(!0, !0).slideUp())
        })
    }(jQuery);

</script>