@model WebUI.Models.ProductOptionsViewModel

@using (Html.BeginForm("SaveProductOption", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ProductId)
    <div class="panel-heading">
        <h3> @("Product name")</h3>
        <div class="save-btns">

            <input type="submit" value="Save" class="btn" id="Submit" />
            <input type="submit" value="Save and go to Product" class="btn btn-save" id="goToProd" />
            @Html.ActionLink("Undo and Exit", "Admin", null, new
            {
                @class = "btn btn-default"
            })
        </div>
    </div>
    <div class="options-tabs">

        @foreach (var option in Model)
        {
            @Html.Action("OptionsList", new { optionName = option.OptionName, prodId = option.OptionProductId })
        }
    </div>
        <div class="clear"></div>
        <div class="panel-footer">
            <div class="save-btns">

                <input type="submit" value="Save" class="btn" id="Submit" />
                <input type="submit" value="Save and go to Product" class="btn btn-save" id="goToProd" />
                @Html.ActionLink("Undo and Exit", "Admin", null, new
                {
                    @class = "btn btn-default"
                })
            </div>
            <div class="clear"></div>
        </div>
        }

