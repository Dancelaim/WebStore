@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
@if (controllerName != "Admin")
{

    <html>
    @RenderPage("~/Views/Shared/_Header.cshtml")
    <body>
        @RenderBody()
    </body>
    @RenderPage("~/Views/Shared/_Footer.cshtml")
</html>
}
else
{

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap-select.min.css">
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <link href="~/Content/CSS/StylesAdmin.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>

    <div class="cover">
        <div class="left-column">
            <div class="column-in">
                <div class="title"><span class="nav-ico ico0"></span> <span class="text-menu">Navigation</span> </div>
                <ul class="list-unstyled">
                    <li><span class="menu-ico ico1"></span><span class="text-menu"> @Html.RouteLink("Home", "AdminItem", new { Action = "Admin" })</span></li>
                    <li><span class="menu-ico ico2"></span><span class="text-menu"> @Html.RouteLink("Products", "AdminItem", new { Action = "List", type = "Product" }) </span></li>
                    <li><span class="menu-ico ico3"></span><span class="text-menu"> @Html.RouteLink("Options", "AdminItem", new { Action = "List", type = "ProductOption" }) </span></li>
                    <li><span class="menu-ico ico4"></span><span class="text-menu"> @Html.RouteLink("Product Games", "AdminItem", new { Action = "List", type = "ProductGame" }) </span></li>
                    <li><span class="menu-ico ico5"></span><span class="text-menu"> @Html.RouteLink("Html Blocks", "AdminItem", new { Action = "List", type = "HtmlBlocks" }) </span></li>
                    <li><span class="menu-ico ico6"></span><span class="text-menu"> @Html.RouteLink("SEO", "AdminItem", new { Action = "List", type = "SEO" }) </span></li>
                    <li class=""><span class="menu-ico ico7"></span><span class="text-menu"><a> Cupon</a> </span></li>
                    <li class=""><span class="menu-ico ico8"></span><span class="text-menu"><a> Orders</a> </span></li>
                    <li class=""><span class="menu-ico ico9"></span><span class="text-menu"><a> Users</a> </span></li>
                </ul>
            </div>
        </div>
        <div class="content">
            <div class="head-block">
                <div class="logo-head"><a href="/"><img src="/Images/logo.svg" alt="logo"></a></div>
                <div class="site-link"><a href="/"></a></div>
                <div class="login-user">Hello, Admin </div>
                <div class="clear"></div>
            </div>
            <div class="content-block">
                @RenderBody()
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <footer>
    </footer>
    <script src="~/Scripts/admin-script.js"></script>
</body>
</html>

}

