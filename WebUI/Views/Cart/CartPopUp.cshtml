@model WowCarry.Domain.Entities.Cart

<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="cartModalLabel">CART</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var item in Model.Lines)
                {
                    <tr>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-left">@item.Product.ProductName</td>
                        <td class="text-right">@item.Product.ProductPrice.Select(p => p.Price).FirstOrDefault().ToString()</td>
                        <td class="text-right">
                            @((item.Quantity * item.Product.ProductPrice.Select(p => p.Price).FirstOrDefault()).ToString())
                        </td>
                    </tr>

                    using (Ajax.BeginForm("RemoveFromCart", new AjaxOptions { UpdateTargetId = "cartModal" }))
                    {
                        @Html.Hidden("productId", item.Product.ProductId)
                        <button type="submit" class="btn">DELETE</button>
                    }
                }
            </div>
            <div class="modal-footer">
                
                    <a class="btn btn-primary" href="">Continue shoping</a>
                
            </div>
        </div>
    </div>
</div>
