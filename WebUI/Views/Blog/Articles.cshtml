@model IEnumerable<WowCarry.Domain.Entities.Article>

<div class="blog-articles">
    <h1>@Model.FirstOrDefault().ProductGame.GameName</h1>
    <div class="articles-list">
        @foreach (var art in Model)
        {
            <div class="post-item">
                <div class="post-image">
                    <a href="@Html.Action("Article", "Blog", new { articleId = art.ArticleId })">
                        <img src="@art.ImagePath" alt="@art.Title" title="@art.Title" class="img-responsive">
                    </a>
                </div>

                <div class="post-text">
                    <div class="post-heading">
                        <div class="tag">
                            <span class="tag-title">tags:</span>
                            @art.Tags
                        </div>
                        <h3 class="title"><a href="">@art.Title </a></h3>

                    </div>
                    <div class="post-body">
                        <span class="date">@art.ArticlePostTime </span>
                        <span class="readtime_thumb">@art.ReadTime</span>
                        <div class="clear"></div>
                        <div class="short-description">
                            @art.ShortDescription
                        </div>
                        <div class="tag mob-tag">
                            <span class="tag-title">tags:</span>
                            @art.Tags
                        </div>
                    </div>
                </div>

                <div class="clear"></div>
            </div>
        }
    </div>
</div>
